<Window x:Class="Wpf_AuthorsBooksEFCoreDBFirst.Views.InputAuthorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"       
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_AuthorsBooksEFCoreDBFirst.Views"
        Title="InputAuthorWindow" Height="215" Width="800">
    <StackPanel Margin="20">
        <TextBlock Text="Enter Author Name:" Margin="0,0,0,10"/>
        <TextBox x:Name="AuthorNameTextBox" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Save" Width="80" Margin="10" Click="SaveButton_Click"/>
            <Button Content="Cancel" Width="80" Margin="10" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
